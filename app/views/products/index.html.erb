<h1>Listing Products</h1>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <table class="table">
          <thead>
            <tr style="background-color: #d3d3d3">
              <th colspan="4">Products (<%=@products.length%>)</th>
            </tr>
          </thead>
          <thead class="thead-light">
            <tr style="background-color: #f1f1f1">
              <th>Name</th>
              <th>Price</th>
              <th>Stock</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.name %></td>
                <td><%= number_to_currency(product.price) %></td>
                <td><%= product.stock %></td>
                <td><%= link_to 'Show', product %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
